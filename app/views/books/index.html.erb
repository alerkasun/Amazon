<div class='row'>
<h1>Listing books</h1>
    <% @books.each do |book| %>
    <div class='col-lg-6'>
        <%= book.title %>
        <%= book.description %>
        <%= book.price %>
        <%= link_to 'Show', book %>
      </div>
    <% end %>
</div>

